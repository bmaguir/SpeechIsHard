<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:id="@+id/signin_linear_layout">

    <Button
        android:background="@color/common_signin_btn_default_background"
        android:textColor="@color/common_signin_btn_dark_text_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/signIn"
        android:onClick="signIn"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/signOut"
        android:layout_gravity="center_horizontal"
        android:onClick="signOut"
        android:visibility="gone" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Play with Friends"
    android:id="@+id/invite"
    android:layout_gravity="center_horizontal"
    android:onClick="inviteFriends"
    android:visibility="gone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quick Match"
        android:id="@+id/play"
        android:layout_gravity="center_horizontal"
        android:onClick="play"
        android:visibility="gone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practice"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:onClick="startPractice"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:id="@+id/instructionsButton"
        android:layout_gravity="center_horizontal"
        android:onClick="showInstructions"/>

</LinearLayout>